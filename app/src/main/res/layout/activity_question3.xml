<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="@color/button_color"
    tools:context=".QuestionActivity3">


    <TextView
        android:id="@+id/DispName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/5"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="26sp"
        android:fontFamily="@font/suse_bold"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/answergrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DispName"
        android:layout_marginLeft="15dp"
        android:layout_alignRight="@+id/DispName"
        android:layout_centerVertical="true">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/radiobutton"
            android:checked="false"
            android:textColor="@color/white"
            android:fontFamily="@font/suse"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:id="@+id/radiobutton2"
            android:checked="false"
            android:textColor="@color/white"
            android:fontFamily="@font/suse"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/radiobutton3"
            android:checked="false"
            android:textColor="@color/white"
            android:fontFamily="@font/suse"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:id="@+id/radiobutton4"
            android:checked="false"
            android:textColor="@color/white"
            android:fontFamily="@font/suse"
            />
    </RadioGroup>



    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/answergrp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="27dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:text="Next"
        android:fontFamily="@font/suse_bold"
        android:textAlignment="center"
        android:background="@drawable/optiondeseign"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/buttonquit"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button3"
        android:text="Quit"
        android:fontFamily="@font/suse_bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:background="@drawable/optiondeseign"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/tvque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answergrp"
        android:text="Question :"
        android:fontFamily="@font/suse_bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:text="Your Score"
        android:textColor="@color/white"
        android:fontFamily="@font/suse"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:fontFamily="@font/suse_bold"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:textSize="19sp"
        />



</RelativeLayout>